<div class="addNav">
        <a class="nav__item" href= "/add_song">Add Songs</a>
        <a class="nav__item" href= "/add_album">Add Albums</a>
</div>

<form class="albumQuestion">
	How many songs are on this album?
	<input type="number" name="$quantity" min="1" max="200" required>
	<input class="formItem" type="submit" name="submit">
</form>


<form class="form">
	Artist:
	<input class="form__item" type="text" name="artistParam" required><br>
	Album:
	<input class="form__item" type="text" name="albumParam" required=""><br>
	Genre:
	<select class="form__item" name="genreParam">
		<option value="blues">Blues</option>
		<option value="classical">Classical</option>
		<option value="country">Country</option>
		<option value="electronic">Electronic</option>
		<option value="folk">Folk</option>
		<option value="hip-hop">Hip-hop/Rap</option>
		<option value="jazz">Jazz</option>
		<option value="pop">Pop</option>
		<option value="rock">Rock</option>
	</select><br>
	<div class="form__item">Track Length</div>
	Minutes:
	<input class="form__item" type="number" min="0" max="99" name="minuteParam" required><br>
	Seconds:
	<input class="form__item" type="number" min="0" max="59" name="secondParam" required><br>
	Rating:
	<span class="rating" name="ratingParam">
        <input type="radio" class="rating-input" value="5"
        		id="rating-input-1-5" name="ratingParam"/>
        <label for="rating-input-1-5" class="rating-star"></label>
        <input type="radio" class="rating-input" value="4"
                id="rating-input-1-4" name="ratingParam"/>
        <label for="rating-input-1-4" class="rating-star"></label>
        <input type="radio" class="rating-input" value="3"
                id="rating-input-1-3" name="ratingParam"/>
        <label for="rating-input-1-3" class="rating-star"></label>
        <input type="radio" class="rating-input" value="2"
                id="rating-input-1-2" name="ratingParam"/>
        <label for="rating-input-1-2" class="rating-star"></label>
        <input type="radio" class="rating-input" value="1"
                id="rating-input-1-1" name="ratingParam"/>
        <label for="rating-input-1-1" class="rating-star"></label>
	</span><br>
	Song Titles:<br>
		<%= 
			$i=0
			while $i < $quantity do
 				puts '<input class="form__item" type="text" name="titleParam" required><br>
 				Minutes:
				<input class="form__item" type="number" min="0" max="99" name="minuteParam" required><br>
				Seconds:
				<input class="form__item" type="number" min="0" max="59" name="secondParam" required><br>'
 				$i +=1
			end 
		%>
		<input class="form__item" type="submit" name="submit">
</form>