<div class ="backArrow__layout">
  <a href="/artists"><img class="backArrow" src="images/back_arrow.png"></a>
</div>

<% if @artist == nil %>
  <table class="artistTable">
    <tr class="artistTable__row">
      <th class="artistTable__header">Artist</th> 
    </tr>
    <% artistarray.each do |artist,album,genre| %>
    <tr class="artistTable__row">
    	<td id="artistButton" class="artistTable__data"><a class="artistTable__link" href= "?artist=<%= artist %>"><%= artist %></a></td>
    </tr>
     <% end %>
  </table>

  

<% else %>


  <h1 id="artistButton"><a href= "<%= @artisturl %>"><%= @artist %></a></h1>
  
  <div class= "artistBio" id="artistBio__preview"><%= @artistBioPreview %></div>
  <div class= "artistBio" id="artistBio__full"><%= @artistBioFull %></div>

  <ul class="artistTab">
    <li id="artistTab__albums">Top Albums</li>
    <li id="artistTab__tracks">Top Tracks</li>
    <li id="artistTab__artists">Similar Artists</li>
  </ul>
  
  <% if @artistinfo["error"] == 6 %>
    <div id = "errorMessage">
    <div class="errorMessage">We're sorry, there were no similar artist found.</div>
  </div>

<% else %>

  <div id= "topAlbums" class= "tabContent">

    <% 3.times do |x| %>

      <div class= "tabContent__view">
        <img class="similarArtist__image" src= "<%= @topalbumimages[x] %>">
        <a href= "<%= @topalbumurls[x] %>"><%=   @topalbumnames[x] %></a>
      </div>

    <% end %>

  </div>

<% end %>

<!--              Top Album Tab           -->

<% if @topalbumsarray["error"] == 6 %>

  <div id = "errorMessage">
    <div class="errorMessage">We're sorry, there were no similar artist found.</div>
  </div>

<% else %>

<div id= "similarArtist" class= "tabContent">
  
    <% 3.times do |x| %>

      <div class= "tabContent__view">
        <img class="similarArtist__image" src= "<%= @similarartistimages[x] %>">
        <a href= "<%= @similarartisturls[x] %>"><%=   @similarartistnames[x] %></a>
      </div>

    <% end %>

  </div>

<% end %>

<!--              Top Tracks Tab          -->

<% if @toptracksarray["error"] == 6 %>

  <div id = "errorMessage">
    <div class="errorMessage">We're sorry, there were no similar artist found.</div>
  </div>

<% else %>

  <div id= "topTracks" class= "tabContent">

    <% 3.times do |x| %>

      <div class= "tabContent__view">
        <img class="similarArtist__image" src= "<%= @toptrackimages[x] %>">
        <a href= "<%= @toptrackurls[x] %>"><%=   @toptracknames[x] %></a>
      </div>

    <% end %>

  </div>

  <% end %>
<% end %>