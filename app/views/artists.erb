<form class="form" action="/artists" method="post">

Which Artist are you looking for?
	<input class="form__item" type="text" name="artistSearchParam" required><br>
	
    <input class="form__item submit" type="submit" name="submit">
</form>


<table class="table">
  <tr class="table__row">
    <th class="table__header">Artist</th> 
    <th class="table__header">Album</th>
    <th class="table__header">Genre</th>
  </tr>
  <% artistarray.each do |artist,album,genre| %>
  <tr class="table__row">
  	<td class="table__data"><a id="artistButton" href= "?artist=<%= artist %>"><%= artist %></td>
  	<td class="table__data"><%= album %></td>
  	<td class="table__data"><%= genre %></td>
  </tr>
   <% end %>
</table>

<% if @similarartistsarray["error"] == 6 %>
  <h2 id = "errorMessage">No similar artists found</h2>
<% else %>
<div id= "similarArtists" class= "similarartists">
  <div class= "similarartists__name">
    <a href= "<%= @similarartistsarray["similarartists"]["artist"][0]["url"] %>"><%= @similarartistsarray["similarartists"]["artist"][0]["name"] %></a>
    <img src= "<%= @similarartistsarray["similarartists"]["artist"][0]["image"][2]["#text"] %>">
  </div>
  <div class= "similarartists__name">
    <a href= "<%= @similarartistsarray["similarartists"]["artist"][1]["url"] %>"><%= @similarartistsarray["similarartists"]["artist"][1]["name"] %></a>
    <img src= "<%= @similarartistsarray["similarartists"]["artist"][1]["image"][2]["#text"] %>">
  </div>
  <div class= "similarartists__name">
    <a href= "<%= @similarartistsarray["similarartists"]["artist"][2]["url"] %>"><%= @similarartistsarray["similarartists"]["artist"][2]["name"] %></a>
    <img src= "<%= @similarartistsarray["similarartists"]["artist"][2]["image"][2]["#text"] %>">
  </div>
<% end %>


</div>