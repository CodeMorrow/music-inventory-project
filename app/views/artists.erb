<% if @artist == nil %>
  <table class="table">
    <tr class="table__row">
      <th class="table__header">Artist</th> 
    </tr>
    <% artistarray.each do |artist,album,genre| %>
    <tr class="table__row">
    	<td id="artistButton" class="table__data"><a href= "?artist=<%= artist %>"><%= artist %></a></td>
    </tr>
     <% end %>
  </table>

  

<% else %>

  <h1 id="artistButton"><a href= "<%= @artisturl %>"><%= @artist %></a></h1>
  
  <div class= "artistbio"><%= @artistbio %></div>
  <div class= "similarartistbutton">Similar Artists </div>
  <div class= "topalbumsbutton">Top Albums</div>
  <div class= "toptracksbutton">Top Tracks</div>
  
  <% if @artistinfo["error"] == 6 %>
    <div id = "errorMessage">
      <div id="artistClose">X</div>
      <div class="errorMessage">We're sorry, there  were no similar artist found.</div>
    </div>
  
  <% else %>
    <!-- <div id= "similarArtists" class= "similarartists  ">
    <div id="artistClose">X</div> -->
  
    <% 3.times do |x| %>
      <div class= "">
        <a href= "<%= @similarartisturls[x] %>"><%=   @similarartistnames[x] %></a>
        <img src= "<%= @similarartistimages[x] %>">
      </div>
    <% end %>

  <% end %>

  <% if @topalbumsarray["error"] == 6 %>
    <div id = "errorMessage">
      <div id="artistClose">X</div>
      <div class="errorMessage">We're sorry, there were no similar artist found.</div>
    </div>
  
  <% else %>
    <!-- <div id= "topAlbums" class= "topAlbums">
    <div id="artistClose">X</div> -->
  
    <% 3.times do |x| %>
      <div class= "">
        <a href= "<%= @topalbumurls[x] %>"><%=   @topalbumnames[x] %></a>
        <img src= "<%= @topalbumimages[x] %>">
      </div>
      <% end %>

  <% end %>
  
  <% if @toptracksarray["error"] == 6 %>
    <div id = "errorMessage">
      <div id="artistClose">X</div>
      <div class="errorMessage">We're sorry, there were no similar artist found.</div>
    </div>

  <% else %>
    <!-- <div id= "similarArtists" class= "similarartists">
    <div id="artistClose">X</div> -->

    <% 3.times do |x| %>
     <div class= "">
       <a href= "<%= @toptrackurls[x] %>"><%=   @toptracknames[x] %></a>
       <img src= "<%= @toptrackimages[x] %>">
     </div>
    <% end %>

  <% end %>

<% end %>


<div class= "backbutton"><a href= "/artists">Back</a></div>







