<% if @error != nil %>
  <div class="container">
    <% @error.each do |error_message| %>
      <div role="alert">
        <button type="button" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Error!</strong> <%= error_message %>
      </div>
    <% end %>
  </div>
<% end %>

<!-- The `yield` below is where the contents of a view file are put. -->
